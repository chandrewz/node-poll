<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>

  <% include ../partials/nav.ejs %>

<div class="jumbotron text-center">
  <div class="container">

    <h1><%= poll.name %></h1>
    <h4><%= poll.total %> votes</h4>
    
    <div data-id="<%= poll.id %>" class="text-left">

      <% options.forEach(function(option) { %>
        <h3><%= option.name %></h3>
        <h4><%= option.votes %> votes</h4>
        <div class="progress">
          <div class="progress-bar" style="width: <%= poll.total > 0 ? option.votes / poll.total * 100 : 0 %>%;"></div>
        </div>
      <% }) %>

      <a href="/poll/<%= poll.id %>" class="btn btn-lg btn-primary">Go to poll</a>
    </div>

  </div>
</div>

<% include ../partials/modal.ejs %>
<% include ../partials/footer.ejs %>

</body>

</html>
